<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_periodic_table"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/category_button"
            android:scaleType="centerInside"
            android:src="@drawable/ic_periodic_table_category" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Bảng Tuần Hoàn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/large_font"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_lecture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/category_button"
            android:scaleType="centerInside"
            android:src="@drawable/ic_lecture_category" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Chủ Đề"
            android:textColor="@android:color/white"
            android:textSize="@dimen/large_font"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>