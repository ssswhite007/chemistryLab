<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_periodic_table"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/category_button"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_periodic_table_category" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/periodic_table"
            android:textColor="@android:color/black"
            android:textSize="@dimen/large_font"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_lecture"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/category_button"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_lecture_category" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/theme"
            android:textColor="@android:color/black"
            android:textSize="@dimen/large_font"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>